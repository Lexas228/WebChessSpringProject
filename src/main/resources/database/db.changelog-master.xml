<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="202010211812" author="Julius Krah">
        <createTable tableName="Figure">
            <column name="id" type="bigserial"/>
            <column name="Type" type="varchar(20)"/>
        </createTable>
        <createTable tableName="Cell">
            <column name="id" type="bigserial"/>
        </createTable>
        <createTable tableName="Player">
            <column name="id" type="bigserial"/>
            <column type="varchar(30)" name="type">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="Game">
            <column name="id" type="bigserial"/>
        </createTable>
        <createTable tableName="Game_players">
            <column name="game_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_game" references="Game(id)"/>
            </column>
            <column name="player_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_player" references="Player(id)"/>
            </column>
        </createTable>
        <createTable tableName="Cell_figure">
            <column name="game_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_game" references="Game(id)"/>
            </column>
            <column name="cell_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_cell" references="Cell(id)" unique="true"/>
            </column>
            <column name="figure_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_figure" references="Figure(id)" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="Figure_cell">
            <column name="game_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_game" references="Game(id)"/>
            </column>
            <column name="figure_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_figure" references="Figure(id)" unique="true"/>
            </column>
            <column name="cell_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_cell" references="Cell(id)" unique="true"/>
            </column>
        </createTable>
        <createTable tableName="Cell_types">
            <column name="Cell_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_cell" references="Cell(id)"/>
            </column>
            <column name="CellType" type="varchar(30)">
                <constraints nullable="false" foreignKeyName="fk_cellType" references="CellTypes(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>